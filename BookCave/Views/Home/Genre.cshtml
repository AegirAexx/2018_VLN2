@model List<BookListViewModel>
@{
    ViewData["Genre"] = "Search";
}
@foreach(var book in @Model)
{
  <div class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-3 d-flex justify-content-center align-items-center thumbnail"></div>
        <div class="col-md-9">
          <a asp-area="" asp-controller="Book" asp-action="Details" asp-route-id="@book.Id"><h1>@book.Title</h1></a>
          <p class="lead">By @book.Author</p>
          <p>Genre: @book.Genre</p>
          <p>Rating: @book.Rating</p>
          <a asp-controller="ShoppingCart" asp-action="Add" asp-route-id="@book.Id" class="btn btn-success">Add to Cart</a>
        </div>
        <p  class="isbn" style="visibility: hidden">@book.ISBN13</p>
      </div>
    </div>
  </div>
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/js/topten.js"></script>
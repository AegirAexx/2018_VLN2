@model List<BookListViewModel>
@{
    ViewData["Title"] = "BookCave Inc";
}
  <div class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="card" id="PoppularBooks">
            <div class="card-header"> Poppular books</div>
            <div class="card-body">
              <ul class="">
                <li>Best sellers</li>
                <li>Top new releases</li>
                <li>Top 10 books</li>
              </ul>
            </div>
          </div>
          <div class="card" id="Genre">
            <div class="card-header"> Genre</div>
            <div class="card-body">
              <ul class="">
                <li>One</li>
                <li>Two</li>
                <li>Three</li>
              </ul>
            </div>
          </div>
        </div>
        

<div>
    @foreach(var book in @Model)
    {
      <div class="" >
        <div class="" >
          <div class="thumbnail">                <img src="https://i.gr-assets.com/images/S/compressed.photo.goodreads.com/books/1445981000i/11557._SY180_.jpg" alt="Card image cap">
</div>
          <div class="">
            <h5 class="">@book.Title</h5>
            <a href="#" class="btn btn-primary">Add to Cart</a>
          </div>
          
        </div>
      </div>
      
    }
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/js/index.js"></script>

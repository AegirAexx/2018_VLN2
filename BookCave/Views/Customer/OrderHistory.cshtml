@model List<OrderListViewModel>
@{
    ViewData["Orders"] = "Order History";
}

<div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="Order-list">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h1 class="text-center">User Order History</h1>
                        </div>
                        <div class="panel-body">
                            <div class="alert alert-info">
                                Hello @Model.ElementAt(0).UserName, Below is your order history with reference number, status and total price.
                            </div>
                            <hr>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>OrderID</th>
                                            <th>Order Amount</th>
                                            <th>Status</th>
                                            <th>Order details</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var order in @Model)
                                        {
                                        <tr>
                                            <td>@order.Id</td>
                                            <td>
                                                <label class="label label-default">@order.TotalPrice ISK</label>
                                            </td>
                                            <td>
                                                <label class="label label-default">@order.OrderStatus</label></td>
                                            <td> <a asp-area="" asp-controller="Customer" asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-xs btn-success">View</a></td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="alert alert-warning">
                                All avove details are related to proccessed orders belonging to user email <b>@Model.ElementAt(0).UserName</b> , for any issue please send an e-mail to <b>bookcave@bookcave.ru.is</b>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
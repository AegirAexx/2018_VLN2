@model List<OrderListViewModel>
@{
    ViewData["Orders"] = "Get All Orders";
}

<div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="Order-list">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4>User Order List : </h4>
                        </div>
                        <div class="panel-body">
                            <div class="alert alert-info">
                                <b>Hello @Model.ElementAt(0).CustomerName, </b>Below are the yours orders with there reference numbers and date.
                            </div>
                            <hr>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>OrderID</th>
                                            <th>Date</th>
                                            <th>Amount</th>
                                            <th>Status</th>
                                            <th>Delivery On </th>
                                            <th># #</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var order in @Model)
                                        {
                                        <tr>
                                            <td>@order.Id</td>
                                            <td>01/24/2015 </td>
                                            <td>
                                                <label class="label label-default">$ @order.TotalPrice</label>
                                            </td>
                                            <td>
                                                <label class="label label-default">@order.OrderStatus</label></td>
                                            <td>N/A</td>
                                            <td> <a href="#" class="btn btn-xs btn-success">View</a></td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="alert alert-warning">
                                All above details are related to user email <b>info@claim.com</b> , for any issue please send an e-mail to <b>help@yourdomain.com</b>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
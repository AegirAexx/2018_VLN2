<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - BookCave</title>
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.12/css/all.css" integrity="sha384-G0fIWCsCzJIMAVNQPfjH08cyYaUtMwjJwqiRKxxE/rx96Uroj1BtIQ6MLJuheaO9" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/w3.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>


<body>
    <nav class="navbar navbar-expand-md  bookcave-color">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.png" alt="BookCave" class="navbar-brand" id="logo-image">
            </a>
            <a asp-area="" asp-controller="Home" asp-action="Index" id="nounderline">
                <strong>Book Cave</strong>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarsExampleDefault">
                <ul class="navbar-nav m-auto">
                    <li class="nav-item m-auto">
                        <div class="dropdown nav-item ">
                            <a class="dropdown-toggle btn btn-info btn-sm mr-3" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Categories
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a asp-area="" class="dropdown-item" asp-controller="Account" asp-action="Contemporary">Contemporary</a>
                                <a asp-area="" class="dropdown-item" asp-controller="Account" asp-action="Crime">Crime</a>
                                <a asp-area="" class="dropdown-item" asp-controller="Account" asp-action="Humor">Humor</a>
                                <a asp-area="" class="dropdown-item" asp-controller="Account" asp-action="Mystery">Mystery</a>
                                <a asp-area="" class="dropdown-item" asp-controller="Account" asp-action="Romance">Romance</a>
                                <a asp-area="" class="dropdown-item" asp-controller="Account" asp-action="Science">Science</a>
                                <a asp-area="" class="dropdown-item" asp-controller="Account" asp-action="Children">Children</a>
                            </div>
                        </div>
                    </li>
                    <a class="btn btn-info btn-sm mr-l m-auto" asp-area="" asp-controller="Home" asp-action="TopTenBooks">
                        Top 10 books
                    </a>
                </ul>
                <form asp-controller="Home" asp-action="Search" method="get" id="top-search" class="form-inline my-2 my-lg-0">
                    <div class="input-group input-group-sm">
                        <input id="x" type="text" class="form-control" name="x" placeholder="Title..." aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                        <div class="input-group-append">
                            <button type="submit" class="btn nav-search">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
                <a class="btn btn-success btn-sm ml-3" asp-area="" asp-controller="ShoppingCart" asp-action="Index">
                    <i class="fa fa-shopping-cart"></i> Cart
                </a>
                <div class="dropdown nav-item ">
                    <a class="dropdown-toggle btn btn-info btn-sm ml-3" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user-circle"></i> User
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>

    <hr>
    <footer class="w3-bottom w3-center"> 
        <a class="btn" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        <a class="btn" asp-area="" asp-controller="Home" asp-action="About">Help and information</a>
    </footer>


    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)

          
</body>
</html>


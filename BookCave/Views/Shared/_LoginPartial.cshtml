@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@using BookCave.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var claim = ((ClaimsIdentity) User.Identity).Claims.FirstOrDefault(c => c.Type == "Name")?.Value;
}

@if(SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-action="LogOut" asp-controller="Account" method="POST">
        <a class="btn btn-outline-dark btn-sm" asp-area="" asp-action="Index" asp-controller="Manage" title="Manage">Hello @claim</a>
        <a type="submit" class="btn btn-outline-dark btn-sm">Log out</a>
    </form>
    <li><a class="fas fa-user-circle fa-lg" asp-area="" asp-controller="Customer" asp-action="OrderHistory">Register</a></li>
}
else
{
    <li><a class="fas fa-user-circle fa-lg" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
    <li><a class="fas fa-user-circle fa-lg" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
}